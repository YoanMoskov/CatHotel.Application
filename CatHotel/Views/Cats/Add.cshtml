@model AddCatFormModel

@{ ViewData["Title"] = "Add Cat"; }

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin text-center">Add Cat</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age"></label>
                <input asp-for="Age" class="form-control" placeholder="640D, S-Class, etc...">
                <span asp-validation-for="Age" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhotoUrl"></label>
                <input asp-for="PhotoUrl" class="form-control" placeholder="Your fine URL here...">
                <span asp-validation-for="PhotoUrl" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BreedId"></label>
                <select asp-for="BreedId" class="form-control">
                    @foreach (var cat in Model.Breeds)
                    {
        <option value="@cat.Id">@cat.Name</option>}
                </select>
            </div>

            <input class="btn btn-primary" type="submit" value="Save" />
        </form>
    </div>
</div>