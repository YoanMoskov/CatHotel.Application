@model CatHotel.Controllers.ViewModels.Cat.CatFormModel

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Cat</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="Name" class="control-label" style="margin-bottom: 5px"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="Age" class="control-label" style="margin-bottom: 5px"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="PhotoUrl" class="control-label" style="margin-bottom: 5px"></label>
                <input asp-for="PhotoUrl" class="form-control" />
                <span asp-validation-for="PhotoUrl" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <label asp-for="BreedId" class="control-label" style="margin-bottom: 5px"></label>
                <select asp-for="BreedId" class="form-select" asp-items="@ViewBag.BreedList"></select>
            </div>
            <div class="form-group" style="margin-bottom: 10px">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}