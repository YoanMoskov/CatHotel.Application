@model IEnumerable<CatHotel.Models.Cat.CatViewModel>

@{
    ViewData["Title"] = "All";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="margin: auto">All cats</h1>

<p style="margin: auto">
    <a class="btn btn-secondary" asp-action="Create">Add New</a>
</p>
<table class="table" style="margin: auto; width: fit-content">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Breed)
            </th>
            <th>
                Options
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cat in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => cat.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cat.Age)
                </td>
                <td>
                    <img src="@cat.PhotoUrl" style="width: 150px; height: auto">
                </td>
                <td>
                    @Html.DisplayFor(modelItem => cat.Breed.Name)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-primary" style="padding: .20rem 1.5rem" asp-route-id="@cat.CatId">Edit</a>
                    <a asp-action="Details" class="btn btn-primary" style="padding: .20rem 1.5rem " asp-route-id="@cat.CatId">Details</a>
                    <a asp-action="Delete" class="btn btn-danger" style="padding: .20rem 1.5rem " asp-route-id="@cat.CatId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>